<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='stylesheets/style.css' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cytoscape/2.3.15/cytoscape.js"></script>
    <script src="javascripts/index.js"></script>
  </head>
  <body>
    <nav id="nav"></nav>

    <div id="progressBar" class="progress-bar">
      <div class="progress-bar-value"></div>
    </div>
    <div id="errorMsg"></div>

    <div class="panels">
      <div class="panel-1">
        <div class="form">
          <h1>Steam IDs</h1>
          <input id="id1" type="text" value="76561197989862681" />
          <input id="id2" type="text"  value="76561197962845430" />
          <button id="btnGenerate">Generate</button>
        </div>

        <div class="form">
          <h1>Highlight Game</h1>
          <select id="game" ></select>
          <button id="btnResetHighlight">Reset</button>
        </div>

        <div class="form">
          <h1>Lookup Steam ID</h1>
          <input id="steamIdLookup" type="text" placeholder="steamcommunity.com/id/patka" />
          <input id="steamIdLookupOut" type="text" disabled />
          <button id="btnLookup">Lookup</button>
        </div>
      </div>
      <div class="panel-2">
        <div id="cy"></div>
      </div>
    </div>
    
  </body>
</html>
